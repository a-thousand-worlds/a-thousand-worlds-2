/* firebase realtime database access rules */
{
  "rules": {
    "users": {
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid"
      }
    },
    "books": {
      ".read": true,
      ".write": "root.child('users/'+auth.uid+'/roles/superadmin').val() === true"
    },
    "content": {
      ".read": true,
      ".write": "root.child('users/'+auth.uid+'/roles/superadmin').val() === true"
    },
    "people": {
      ".read": true,
      ".write": "root.child('users/'+auth.uid+'/roles/superadmin').val() === true"
    },
    "tags": {
      ".read": true,
      ".write": "root.child('users/'+auth.uid+'/roles/superadmin').val() === true"
    },
    "submits": {
      ".read": true,
      ".write": true
    }
  }
}
