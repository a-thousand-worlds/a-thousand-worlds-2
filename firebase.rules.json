/* firebase realtime database access rules */
{
  "rules": {
    "users": {
      ".read": "root.child('users/'+auth.uid+'/roles/owner').val() === true",
      ".write": "root.child('users/'+auth.uid+'/roles/owner').val() === true",
      "$uid": {
        ".read": true,
          // TODO: secure
        ".write": "$uid === auth.uid"
      }
    },
    "books": {
      ".read": true,
      ".write": "root.child('users/'+auth.uid+'/roles/owner').val() === true"
    },
    "content": {
      ".read": true,
      ".write": "root.child('users/'+auth.uid+'/roles/owner').val() === true"
    },
    "invites": {
      ".read": true,
      ".write": "root.child('users/'+auth.uid+'/roles/owner').val() === true",
      "$code": {
        "used": {
          ".read": true,
            // TODO: secure
          ".write": true
        }
      }
    },
    "people": {
      ".read": true,
      ".write": "root.child('users/'+auth.uid+'/roles/owner').val() === true"
    },
    "tags": {
      ".read": true,
      ".write": "root.child('users/'+auth.uid+'/roles/owner').val() === true"
    },
    "submits": {
      ".read": true,
      ".write": true
    }
  }
}
